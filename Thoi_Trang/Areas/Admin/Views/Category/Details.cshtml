@model MyClass.Models.Category

@{
    ViewBag.Title = "Chi Tiết Danh Mục Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Chi Tiết Danh Mục Sản Phẩm </strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Edit","Category",new { id=Model.Id } )" class="btn btn-sm btn-success"><i class="fas fa-edit"></i>Cập Nhật</a>
                        <a href="@Url.Action("DelTrash","Category",new { id=Model.Id } )" class="btn btn-sm btn-danger "><i class="fas fa-trash"></i>Xóa</a>
                        <a href="@Url.Action("Index","Category")" class="btn btn-sm btn-info "><i class="fas fa-long-arrow-alt-left"></i> Quay Lại danh sách</a>
                    </div>
                </div>

            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th style="width:120px">Tên Trường </th>
                        <th>Nội Dung</th>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Name)</td>
                        <td> @Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Slug)</td>
                        <td> @Html.DisplayFor(model => model.Slug)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.ParentID)</td>
                        <td> @Html.DisplayFor(model => model.ParentID)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Orders)</td>
                        <td>@Html.DisplayFor(model => model.Orders)</td>
                    </tr>
                    <tr>
                        <td> @Html.DisplayNameFor(model => model.MetaDesc)</td>
                        <td>@Html.DisplayFor(model => model.MetaDesc)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.MetaKey)</td>
                        <td>@Html.DisplayFor(model => model.MetaKey)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.CreateBy)</td>
                        <td>@Html.DisplayFor(model => model.CreateBy)</td>
                    </tr>
                    <tr>
                        <td> @Html.DisplayNameFor(model => model.CreateAt)</td>
                        <td>@Html.DisplayFor(model => model.CreateAt)</td>
                    </tr>
                    <tr>
                        <td> @Html.DisplayNameFor(model => model.UpdateBy)</td>
                        <td>@Html.DisplayFor(model => model.UpdateBy)</td>
                    </tr>
                    <tr>
                        <td> @Html.DisplayNameFor(model => model.UpdateAt)</td>
                        <td>@Html.DisplayFor(model => model.UpdateAt)</td>
                    </tr>
                    <tr>
                        <td> @Html.DisplayNameFor(model => model.Status)</td>
                        <td>@Html.DisplayFor(model => model.Status)</td>
                    </tr>        
                </table>
            </div>
            <!-- /.card-body -->
            <!-- /.card-footer-->
        </div>
    </section>
</div>
<!-- /.card -->
<!-- /.content-wrapper -->



