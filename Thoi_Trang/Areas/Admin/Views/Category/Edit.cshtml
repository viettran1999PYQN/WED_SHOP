@model MyClass.Models.Category

@{
    ViewBag.Title = "Cập Nhật danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(Model => Model.CreateAt)
    @Html.HiddenFor(Model => Model.CreateBy)
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <!-- Main content -->
        <section class="content my-2">
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">Cập Nhật Danh Mục Sản Phẩm</strong>
                        </div>
                        <div class="col-md-6 text-right ">
                            <button type="submit" class="btn btn-sm btn-success " name="edit"><i class="fas fa-save"></i>Lưu[Cập Nhật]</button>
                            <a href="@Url.Action("Index","Category")" class="btn btn-sm btn-danger "><i class="fas fa-long-arrow-alt-left"></i> Quay Lại danh sách</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <label>Tên Danh Mục Sản Phẩm<span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Mô Tả <span class="text-danger">(*)</span></label>
                                @Html.TextAreaFor(model => model.MetaDesc, new { @class = "form-control", @row = "3" })
                                @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group">
                                <label>Từ Khóa<span class="text-danger">(*)</span></label>
                                @Html.TextAreaFor(model => model.MetaKey, new { @class = "form-control", @row = "3" })
                                @Html.ValidationMessageFor(model => model.MetaKey, "", new { @class = "text-danger" })

                            </div>

                        </div>
                        <div class="co-md-3">
                            <div class="form-group">
                                <label>Danh Mục Cấp Cha</label>
                                @Html.DropDownListFor(model => model.ParentID, (SelectList)ViewBag.ListCast, "Cấp Cha", new { @class = "form-control" })<!-- chủ đề cha -->
                                @Html.ValidationMessageFor(model => model.ParentID, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Sắp Xếp</label>
                                @Html.DropDownListFor(model => model.Orders, (SelectList)ViewBag.ListOrders, "Sắp xếp", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Orders, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Trạng Thái</label>
                                @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Text = "Chưa xuất bản", Value = "2" }, new SelectListItem { Text = " xuất bản", Value = "1" } }, new { @class = "form-control" });
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>

                </div>
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->



    <!-- /.content-wrapper -->
}
