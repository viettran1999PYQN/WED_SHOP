@model IEnumerable<MyClass.Models.Post>

@{
    ViewBag.Title = "Tất cả bài viết ";//Post
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />

}
@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}

<h2>Index</h2>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6">
                        <strong class="text-danger text-uppercase">Danh Sách Bài Viết</strong>
                    </div>
                    <div class="col-6 text-right">
                        <a href="@Url.Action("Create","Page")" class="btn btn-sm btn-success "><i class="fas fa-plus"></i> Thêm</a>
                        <a href="@Url.Action("Trash","Page")" class="btn btn-sm btn-danger "><i class="fas fa-trash"></i>Thùng rác</a>

                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px">#</th>

                            <th class="text-center" style="width:100px">Hình </th>
                            <th>Tiêu Đề</th>
                            <th class="text-center" style="width:180px">Chứa Năng</th>
                            <th class="text-center" style="width:20px">ID</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" name="checkID" value="" /></td>


                                <td>
                                    <img src="~/Public/image/Posts/@item.Img" class="img-fluid" alt="TenHinh" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                               

                                <td class="text-center">
                                    @if (item.Status == 1)
                                    {
                                        <a href="@Url.Action("Status","Page",new { id=item.Id } )" class="btn btn-sm btn-success "><i class="fas fa-toggle-on"></i> </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Status","Page",new { id=item.Id } )" class="btn btn-sm btn-danger"><i class="fas fa-toggle-off"></i> </a>
                                    }

                                    <a href="@Url.Action("Details","Page",new { id=item.Id } )" class="btn btn-sm btn-primary "><i class="fas fa-eye"></i> </a>
                                    <a href="@Url.Action("Edit","Page",new { id=item.Id } )" class="btn btn-sm btn-info"><i class="fas fa-edit"></i> </a>
                                    <a href="@Url.Action("DelTrash","Page",new { id=item.Id } )" class="btn btn-sm btn-danger "><i class="fas fa-trash"></i> </a>


                                </td>
                                <td>@item.Id</td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
            <!-- /.card-body -->

        </div>

    </section>
    <!-- /.card-footer-->
</div>
