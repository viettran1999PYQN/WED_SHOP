@model MyClass.Models.Post

@{
    ViewBag.Title = "Cập Nhật Bài Post";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm("Edit", "Post", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <!-- Main content -->
        <section class="content my-2">
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">Cập Nhật Post</strong>
                        </div>
                        <div class="col-md-6 text-right ">
                            <button type="submit" class="btn btn-sm btn-success " name="edit"><i class="fas fa-save"></i>Lưu[Cập Nhật]</button>
                            <a href="@Url.Action("Index","Post")" class="btn btn-sm btn-danger "><i class="fas fa-long-arrow-alt-left"></i> Quay Lại danh sách</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <label>Tên Bài Post<span class="text-danger">(*)</span></label>
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>



                            <div class="form-group">
                                @Html.LabelFor(model => model.PostType, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.PostType, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PostType, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Từ Khóa</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.MetaKey, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MetaKey, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label></label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.MetaDesc, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })
                                </div>
                            </div>

                           

                        </div>
                        <div class="co-md-3">
                            <div class="co-md-3">
                                <div class="form-group">
                                    <label>Hình</label>
                                    <input name="img" type="file" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>TopicID</label>
                                    @Html.DropDownListFor(model => model.TopicId, (SelectList)ViewBag.ListTopic, "Cấp Cha", new { @class = "form-control" })<!-- chủ đề cha -->
                                    @Html.ValidationMessageFor(model => model.TopicId, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Trạng Thái</label>
                                    @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Text = "Chưa xuất bản", Value = "2" }, new SelectListItem { Text = " xuất bản", Value = "1" } }, new { @class = "form-control" });
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
                <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->



    <!-- /.content-wrapper -->
}






































