@model IEnumerable<MyClass.Models.Product>
@foreach (var product in Model)
{
    <div class="product-item @product.CatId">
        <div class="product discount product_filter">

            <div class="product_image">

                <img src="~/Public/image/products/@product.Img" alt="">
            </div>
            <div class="favorite favorite_left"></div>
            <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>giảm giá SỐC!!!</span></div>
            <div class="product_info">
                <h6 class="product_name"><a href="single.html">@product.Name</a></h6>
                <div class="product_price">@product.Price<span>@product.Pricesale</span></div>
            </div>
        </div>
        <div class="red_button add_to_cart_button"><a href="#">add to cart</a></div>
    </div>
}


